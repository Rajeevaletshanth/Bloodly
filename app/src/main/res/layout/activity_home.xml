<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6500CB"
    android:orientation="vertical"
    android:padding="10dp"


    tools:context=".Home">

    <ImageButton
        android:id="@+id/event"
        android:layout_width="138dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/circbackgroundpurplele"
        app:srcCompat="@drawable/event" />

    <ImageButton
        android:id="@+id/post"
        android:layout_width="135dp"
        android:layout_height="171dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="88dp"
        android:layout_toEndOf="@+id/event"
        android:layout_toRightOf="@+id/event"
        app:srcCompat="@drawable/post" />

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="138dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="290dp"
        app:srcCompat="@drawable/profile1" />

    <ImageButton
        android:id="@+id/donate"
        android:layout_width="138dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="290dp"
        android:layout_toEndOf="@+id/profile"
        android:layout_toRightOf="@+id/profile"
        app:srcCompat="@drawable/bd" />

    <ImageButton
        android:id="@+id/notification"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/buttonstyle2"
        app:srcCompat="@drawable/nfb" />


</RelativeLayout>








