<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".AddDoner">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/textView4"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="-6dp"
        android:entries="@array/names"></Spinner>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="168dp"
        android:layout_height="30dp"


        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="98dp"
        android:text="Select Blood Group :"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="167dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="186dp"
        android:text="Units :"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="235dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:text="ADD BLOOD"
        android:textColor="@color/colorPrimaryDark"
        android:textSelectHandle="@drawable/circlebackground2"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner2"
        android:entries="@array/units"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/spinner"
        android:layout_alignLeft="@+id/spinner"></Spinner>

    <Button
        android:id="@+id/button"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/savebtn"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/savebtn"
        android:layout_toRightOf="@+id/savebtn"
        android:background="@drawable/buttonstyle2"
        android:text="Update"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button"

        android:layout_marginStart="14dp"

        android:layout_marginLeft="14dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:background="@drawable/buttonstyle2"
        android:text="Delete"
        android:textSize="16dp" />

    <Button
        android:id="@+id/savebtn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="205dp"
        android:background="@drawable/buttonstyle2"
        android:text="Save"
        android:textColor="#000000"
        android:textSize="16dp" />

    <Button
        android:id="@+id/txtviewbtn"
        android:layout_width="355dp"
        android:layout_height="78dp"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/pop_up_back2"
        android:text="View"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />


</RelativeLayout>










